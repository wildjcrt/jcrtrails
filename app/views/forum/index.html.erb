<h1>Jcrt Forum</h1>
<h2><%= link_to 'New Post', new_forum_path %></h2>
<table>
	<tr>
	</tr>
	
<% for post in @posts %>
	<tr>
		<td><%= post.subject %></td>
		<td><%= link_to 'Show', forum_path(post) %></td>
		<td><%= link_to 'Edit', edit_forum_path(post) %></td>
		<td><%= link_to 'Destroy', forum_path(post), 
			:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
<% end %>
</table>