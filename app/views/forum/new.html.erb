<h1>New Post</h1>

<% form_for :post, :url => forums_path , :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<div><label>subject</label><br><%= f.text_field :subject %></div>
	<div><label>content</label><br><%= f.text_area :content %></div>
	<%= f.file_field :attachment %><br>
	<%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end %>

<%= link_to 'Back', forums_path %>