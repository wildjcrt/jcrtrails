<h1>Game List</h1>
<h2><%= link_to("New Game", new_game_path) %></h2>

<%= render_table(@games,
	[	
    ["ID", lambda { |p| p.id }],
    ["遊戲名稱", lambda { |p| p.name }],
	["標籤", lambda { |p| p.tag_list.join(" | ") }],
	["動作", lambda { |p| game_button_in_index(p)}]
	],
    :class_name => "table") 
%>

<%= will_paginate(@games) %>