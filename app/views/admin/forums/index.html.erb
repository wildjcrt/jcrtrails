<h1>Forum</h1>

<% if current_user %>
<h2><%= link_to 'New Post', new_forum_path %></h2>
<% end %>
<div class="abc">srth</div>
<table>
	<tr>
	</tr>

<% for post in @posts %>
	<tr><td><%= post.id %>.</td>
		<td><%= post.subject %></td>
		<td><%= link_to 'Show', forum_path(post) %></td>
		<% if current_user.is_admin %>
		<td><%= link_to 'Destroy', forum_path(post), 
			:confirm => 'Are you sure?', :method => :delete %></td>
		<% end %>
	</tr>
<% end %>
</table>

<%= will_paginate(@posts) %>