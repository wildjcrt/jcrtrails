<h1>New Album</h1>

<% form_for :album, :url => albums_path , :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<label>Upload Your Picture</label><br>
	<%= f.file_field :attachment %>	
	<div><label>subject</label><br><%= f.text_field :subject %></div>
	<div><label>content</label><br><%= f.text_area :content %></div>
	<%= f.submit "Submit" %>
<% end %>

<%= link_to("Back", albums_path) %>